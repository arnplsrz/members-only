<section class="section membership is-maxheight">
  <div class="container pb-6 is-maxheight is-flex is-flex-direction-column is-justify-content-center">
    <%- include("../partials/errors") %>
    <% if (locals.user) { %>
    <h1 class="title">Join the club.</h1>
    <% } %>
    <p class="subtitle">
      <% if (locals.user.is_admin) { %>
      You are currently an Admin
      <% } else if (locals.user.membership_status) { %>
      You are currently a Member
      <% } else { %>
      Use this passcode <em><strong>false.confined.irritably2</strong></em> to join as member!
      <% } %>
    <form action="/membership" method="POST">
      <div class="field">
        <label class="label" for="passcode">Passcode</label>
        <div class="control">
          <input class="input" type="text" id="passcode" name="passcode" placeholder="Enter secret passcode" />
        </div>
      </div>
      <div class="field mt-5">
        <div class="control">
          <button class="button is-primary" type="submit">Join</button>
        </div>
      </div>
    </form>
  </div>
</section>